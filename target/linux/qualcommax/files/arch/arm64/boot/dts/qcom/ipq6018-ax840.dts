/dts-v1/;

#define __IPQ_MEM_PROFILE_512_MB__

#include "ipq6018.dtsi"
#include "ipq6018-memory.dtsi"
#include "ipq6018-wifi.dtsi"
#include "ipq6018-ess.dtsi"

#include <dt-bindings/input/input.h>
#include <dt-bindings/gpio/gpio.h>

/ {
	model = "Yuncore AX840";
	compatible = "yuncore,ax840", "qcom,ipq6018-cp03", "qcom,ipq6018";
	
	aliases {
		ethernet0 = &dp5;
		ethernet1 = &dp4;
		serial0 = &blsp1_uart3;
		led-boot = &led_system;
		led-failsafe = &led_system;
		led-running = &led_system;
		led-upgrade = &led_system;
	};

	chosen {
		stdout-path = "serial0:115200n8";
		bootargs-append = " ubi.block=0,rootfs root=/dev/ubiblock0_1 earlycon debug";
	};

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			gpios = <&tlmm 19 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};
	};

	leds {
		compatible = "gpio-leds";

		led_system: led_system {
			label = "system";
			color = "red";
			gpios = <&tlmm 32 GPIO_ACTIVE_HIGH>;
		};

		led_wlan2g {
			label = "wlan2g";
			color = "green";
			gpios = <&tlmm 37 GPIO_ACTIVE_HIGH>;
		};

		led_wlan5g {
			label = "wlan5g";
			color = "blue";
			gpios = <&tlmm 35 GPIO_ACTIVE_HIGH>;
		};
	};
};

&blsp1_uart3 {
	pinctrl-0 = <&serial_3_pins>;
	pinctrl-names = "default";
	status = "okay";
};

&tlmm {
	mdio_pins: mdio-pins {
		mdc {
			pins = "gpio64";
			function = "mdc";
			drive-strength = <8>;
			bias-pull-up;
		};

		mdio {
			pins = "gpio65";
			function = "mdio";
			drive-strength = <8>;
			bias-pull-up;
		};
	};

	led_enable {
		gpio-hog;
		output-high;
		gpios = <36 GPIO_ACTIVE_HIGH>;
		line-name = "enable-leds";
	};
};

&mdio {
	status = "okay";
	pinctrl-0 = <&mdio_pins>;
	pinctrl-names = "default";
	reset-gpios = <&tlmm 77 GPIO_ACTIVE_LOW>;
	reset-delay-us = <10000>;
	reset-post-delay-us = <50000>;

	qca8075_3: ethernet-phy@3 {
		reg = <3>;
	};

	qca8075_4: ethernet-phy@4 {
		reg = <4>;
	};
};

&switch {
	status = "okay";
	switch_cpu_bmp =   <ESS_PORT0>; /* cpu port bitmap */
	switch_lan_bmp =   <ESS_PORT4>; /* lan port bitmap */
	switch_wan_bmp =   <ESS_PORT5>; /* wan port bitmap */
	switch_inner_bmp = <ESS_PORT6 | ESS_PORT7>; /*inner port bitmap*/
	switch_mac_mode =  <MAC_MODE_PSGMII>; /* mac mode for uniphy instance0*/
	switch_mac_mode1 = <MAC_MODE_DISABLED>; /* mac mode for uniphy instance1*/
	switch_mac_mode2 = <MAC_MODE_DISABLED>; /* mac mode for uniphy instance2*/

	qcom,port_phyinfo {
		port@3 {
			port_id = <0x04>;
			phy_address = <0x03>;
		};

		port@4 {
			port_id = <0x05>;
			phy_address = <0x04>;
		};
	};
};

&edma {
	status = "okay";
};

&dp4 {
	status = "okay";
	phy-handle = <&qca8075_3>;
	label = "lan";
};

&dp5 {
	status = "okay";
	phy-handle = <&qca8075_4>;
	label = "wan";
};

&qpic_bam {
	status = "okay";
};

&qpic_nand {
	status = "okay";

	nand@0 {
		reg = <0>;

		nand-ecc-strength = <4>;
		nand-ecc-step-size = <512>;
		nand-bus-width = <8>;
	};
};

&wifi {
  qcom,ath11k-calibration-variant = "Yuncore-AX840";
	status = "okay";
};
